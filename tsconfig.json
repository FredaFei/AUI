{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": ".",
    "outDir": "./dist/lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "./packages"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "script",
    "webpack",
    "**/*.spec.ts",
    "*.js"
  ]
}